<script>
    class TemplateManager {
        constructor(theme) {
            this.initTemplateTheme = theme;
            this.prepTemplateFilesDownload();
            this.loadThemes();
            this.addScene();
            this.createForm($("#order-form").serialize());
            this.templateEditor = {};
            this.x2js = new X2JS();
            this.xmlSerializer = new XMLSerializer();
            $.getJSON("/api/getTemplates", d => {
                const templateTheme = this.params(window.location.search).get("theme");
                this.templateEditor.allTemplates = d;
                $("#template_ideas").html(
                    Object.keys(d).filter(i => d[i].themeName).map(v => `<button class="template col-xs-5" id="${
                        v
                    }_template" onclick="templateManager.selectTemplate('${v}')">
                        <input type="radio" name="template" value="${v}"/> ${d[v].title}<br>
                        <img src="/static/qvm/templates/${v}/channel.jpg" style="height: 155px; width: 308px;"/>
                    </button>`)
                );
                if (templateTheme) {
                    this.templateEditor.id = templateTheme;
                    while (this.themes) {
                        this.initTemplateEditor(d[templateTheme]);
                        break;
                    }
                }
            })
        }
        async loadSongs() {
            async function cc(tv) {
                return new Promise(async (res, rej) => {
                    jQuery.getJSON(`/api/theme/get?tId=${tv}&tag=sound`, d => {
                        res(d.filter(i => i.attr.subtype == "bgmusic" && !i.attr.id.endsWith(".swf")));
                    })
                })
            }
            const array = await cc(this.themeInfo.attr.id);
            const info = {
                tv: array.length == 0 ? "common" : array
            }
            info.results = info.tv == "common" ? await cc(info.tv) : array;
            return info
        }
        newSceneTiming(t) {
            this.sceneTimings[t.type][this.sceneTimings[t.type].length] = t;
            $(`#sceneTimings_${t.type}`).append(`<input class="form-control" type="number" name="settings[advanced][${t.type}][${
                this.sceneTimings[t.type].length
            }]"${t.is_required ? ' required' : ''}/>`)
        }
        removeSceneTiming(t) {
            if (this.sceneTimings[t.type].length == 1) return displayFeedback("1You cannot remove any more scene timings");
            $(`#sceneTimings_${t.type}`).find(`input[name="settings[advanced][${t.type}][${this.sceneTimings[t.type].length}]"]`).remove();
            this.sceneTimings[t.type].splice(this.sceneTimings[t.type].length - 1, 1);
        }
        json2xml(j) {
          return this.xmlSerializer.serializeToString(this.x2js.json2xml(j));
        }
        params(d) {
            return new URLSearchParams(d);
        }
        prepTemplateFilesDownload(theme) {
            $("#templateFilesDownload").html(`<h3>
                Get Example Template Files
            </h3>
            <p class="text-muted">This will help you create your template without messing things up.</p>
            <a class="form-control" download="template_files.zip" href="/api/getTemplateFiles?theme=${
                theme || this.initTemplateTheme
            }">Download Files</a>
            <div class="payment-form-section-divider"></div>`);
        }
        selectTemplate(id) {
            $(`#${id}_template`).find(`input[value="${id}"]`).prop("checked", true);
        }
        async loadSceneSettings(i) {
            jQuery.blockUI();
            const songs = await this.loadSongs();
            this.sceneBases = this.sceneBases || [];
            const mid = $(`select[name="step2movie${i}"]`).val();
            if (!mid) return displayFeedback(`1Please select a movie in scene ${i + 1} in order to change scene settings`);
            const advancedTemplateSceneSettings = await (async () => {
                return new Promise((res, rej) => jQuery.post(
                    '/api/templateStuff/get?filename=templateSettingsBase.json&header=Content-type,application/json', res
                ));
            })();
            jQuery.get(`/movies/${mid}.xml`, d => {
                this.sceneBases[i] = this.x2js.xml2json(d);
                this.sceneSettings = $("#sceneSettings");
                this.sceneSettings.functions = {
                    loadSceneChooser(t, $this, l) {
                        return t.type == "array" ? `<div class="form-group"${t.grouoId ? ` id="${t.grouoId}"` : ''}>
                            <label class="control-label">${t.name}${t.is_required ? `<span class="text-danger">*</span>` : ''}</label>
                            <select class="form-control" name="settings[advanced][${l}]">${$this.sceneBases[i].film.scene.map(
                                v => `<option value="${v._id}">Movie Scene #${Number(v._index) + 1}</option>`
                            ).join('')}</select>
                        </div>` : `<div class="container">
                            <label for="" class="control-label">${t.name}${t.is_required ? `<span class="text-danger">*</span>` : ''}</label>
                            <div class="row">
                                ${$this.sceneBases[i].film.scene.map(
                                    v => `<div class="col-md-5"><input type="${t.type}" name="settings[advanced][${l}]${
                                        t.type == "checkbox" ? `[${v._index}]` : ``
                                    }" value="${v._index}"${t.is_required ? ' required' : ''}/> Movie Scene #${
                                        Number(v._index) + 1
                                    }</div>`
                                ).join('')}
                            </div>
                        </div>`
                    },
                    loadAllCharAvatars(t, $this, l) {
                        const avatars = {};
                        for (
                            const scene of $this.sceneBases[i].film.scene
                        ) if (scene.char) for (const char of scene.char) avatars[char._id] = true;
                        return `<div class="form-group"${t.grouoId ? ` id="${t.grouoId}"` : ''}>
                            <label for="" class="control-label">${t.name}${
                                t.is_required ? `<span class="text-danger">*</span>` : ``
                            }</label>
                            <select class="form-control" name="settings[advanced][${l}]">
                                <option value="">Select An Avatar ID (Required for 1 character, optional on 2 and more characters)</option>
                                ${Object.keys(avatars).map(v => `<option value="${v}">${v}</option>`).join('')}
                            </select>
                        </div>`
                    },
                    loadSongOptions(t, $this, l) {
                        return `<div class="form-group"${t.grouoId ? ` id="${t.grouoId}"` : ''}>
                            <label for="" class="control-label">${t.name}${t.is_required ? `<span class="text-danger">*</span>` : ``}</label>
                            <select class="form-control" name="settings[advanced][${l}]">
                                ${songs.results.map(v => `<option value="${songs.tv}.${v.attr.id}">${v.attr.name}</option>`).join('')}
                            </select>
                        </div>`;
                    },
                    hideElement(t, l, obj) {
                        $(t.hideElement)[$(obj).val() == "N" ? 'hide' : 'show']();
                    },
                    toOffsetLoader(t, $this, l) {
                        $this.sceneTimings = $this.sceneTimings || {};
                        $this.sceneTimings[t.type] = [];
                        $this.sceneTimings[t.type].unshift(t);
                        return `<div class="form-group"${t.grouoId ? ` id="${t.grouoId}"` : ''}>
                            <label for="" class="control-label">${t.name}${
                                t.is_required ? `<span class="text-danger">*</span>` : ``
                            }</label>
                            <button class="btn btn-xs btn-green" onclick='templateManager.newSceneTiming(${
                                JSON.stringify(t)
                            })' type="button">Add New Timing</button>
                            <button class="btn btn-xs btn-red" onclick='templateManager.removeSceneTiming(${
                                JSON.stringify(t)
                            })' type="button">Remove Timing</button>
                            <div id="sceneTimings_${t.type}">
                                <input class="form-control" type="number" name="settings[advanced][${t.type}][1]"${
                                    t.is_required ? ' required' : ''
                                }/>
                            </div>
                         </div>`
                    }
                }
                this.sceneSettings.find('h3[class="modal-title"]').text(`Scene ${i} Settings`);
                const body = this.sceneSettings.find('div[class="modal-body"]');
                let settings = {
                    applyBasicSettingsLogic: false,
                };
                switch ($("#sceneGenMEthod").val()) {
                    case "/ajax/previewText2Video": {
                        Object.assign(settings, advancedTemplateSceneSettings.jyvee);
                        break;
                    } default: {
                        settings.applyBasicSettingsLogic = true;
                        Object.assign(settings, advancedTemplateSceneSettings.default);
                        break;
                    }
                }
                body.html(`<input type="hidden" name="currentSceneNum" value="${
                    i
                }"/>${settings.applyBasicSettingsLogic ? `<h3>Basic Settings</h3>
                <div class="container">
                    <label for="" class="control-label">Movie Scenes To Use For The Start Of The Video</label><br>
                    <div class="row">
                        ${this.sceneBases[i].film.scene.map(
                            v => `<div class="col-md-5"><input type="checkbox" name="settings[basic][usingMovieScene4VideoStart][${v._index}]"/> Movie Scene #${
                                Number(v._index) + 1
                            }</div>`
                        ).join('')}
                    </div>
                </div>
                <div class="container">
                    <label for="" class="control-label">Movie Scenes To Use For The End Of The Video</label><br>
                    <div class="row">
                        ${this.sceneBases[i].film.scene.map(
                            v => `<div class="col-md-5"><input type="checkbox" name="settings[basic][usingMovieScene4VideoEnd][${v._index}]"/> Movie Scene #${
                                Number(v._index) + 1
                            }</div>`
                        ).join('')}
                    </div>
                </div>
                <div class="container">
                    <label for="" class="control-label">Movie Scenes To Use For The Camera Zooming In To Character One</label><br>
                    <div class="row">
                        ${this.sceneBases[i].film.scene.map(
                            v => `<div class="col-md-5"><input type="checkbox" name="settings[basic][usingMovieScene4Char1CamZommin][${v._index}]"/> Movie Scene #${
                                Number(v._index) + 1
                            }</div>`
                        ).join('')}
                    </div>
                </div>
                <div class="container">
                    <label for="" class="control-label">Movie Scenes To Use For Camera Zooning In To Character Two</label><br>
                    <div class="row">
                        ${this.sceneBases[i].film.scene.map(
                            v => `<div class="col-md-5"><input type="checkbox" name="settings[basic][usingMovieScene4Char2CamZoomin][${v._index}]"/> Movie Scene #${
                                Number(v._index) + 1
                            }</div>`
                        ).join('')}
                    </div>
                </div>
                <div class="container">
                    <label for="" class="control-label">Movie Scenes To Use For The Camera Zooming In To Both Characters</label><br>
                    <div class="row">
                        ${this.sceneBases[i].film.scene.map(
                            v => `<div class="col-md-5"><input type="checkbox" name="settings[basic][usingMovieScene4CharCam][${v._index}]"/> Movie Scene #${
                                Number(v._index) + 1
                            }</div>`
                        ).join('')}
                    </div>
                </div>
                <h3>Advanced Settings</h3>` : ''}
                ${(() => {
                    return Object.keys(settings).map(v => {
                        if (typeof settings[v] != "object") return;
                        else if (settings[v].call_function) return this.sceneSettings.functions[settings[v].call_function](
                            settings[v], this, v
                        );
                        else switch (settings[v].type) {
                            case "array": return `<div class="form-group"${settings[v].grouoId ? ` id="${settings[v].grouoId}"` : ''}>
                                <label for="" class="control-label">${settings[v].name}${
                                    settings[v].is_required ? `<span class="text-danger">*</span>` : ''
                                }</label>
                                <select class="form-control" name="settings[advanced][${v}]"${
                                    settings[v].onSelect ? ` onchange='templateManager.sceneSettings.functions.${settings[v].onSelect}(
                                        ${JSON.stringify(settings[v])}, "${v}", this
                                    )'` : ''
                                }>${
                                    settings[v].options.map(i => `<option value="${i}">${i}</option>`)
                                }</select>
                            </div>`
                            default: return `<div class="form-group"${settings[v].grouoId ? ` id="${settings[v].grouoId}"` : ''}>
                                <label for="" class="control-label">${settings[v].name}${
                                    settings[v].is_required ? `<span class="text-danger">*</span>` : ''
                                }</label>
                                <input class="form-control" type="${settings[v].type}" name="settings[advanced][${v}]"${
                                    settings[v].is_required ? ' required' : ''
                                }/>
                            </div>`
                        }
                    }).join('')
                })()}`);
                this.sceneSettings.modal('show');
                jQuery.unblockUI();
            });
        }
        ccThemeIdChange(obj) {
            this.themeInfo = this.themes.find(i => i.attr.id == obj.value);
            $("#ccThemeId").val(this.themeInfo.attr.cc_theme_id);
            this.loadStockChars(this.themeInfo.attr.cc_theme_id);
            this.customCharsSetup();
        }
        loadThemes() {
            jQuery.blockUI();
            $.getJSON("/api/themes/get?no_extras=true", d => {
                this.themes = d;
                $("#themeId").html(d.filter(i => i.attr.isHidden != "1").filter(i => i.attr.cc_theme_id).map(v => `<option value="${
                    v.attr.id
                }">${v.attr.name}</option>`));
                this.ccThemeIdChange(document.getElementById('themeId'));
            })
        }
        customCharsSetup() {
            this.checkForm();
            if (this.json.template_customChars_enable == "1" && $("#ccThemeId").val()) $("#customChars_info").show();
            else $("#customChars_info").hide();
        }
        addScene() {
            this.sceneArray = this.sceneArray || [];
            this.sceneArray.unshift({
                index: this.sceneArray.length + 1,
                val: Math.random().toString().substr(2)
            });
            this.addSceneHTML();
        }
        randomIntFromInterval(min, max) {
            return Math.floor(Math.random() * (max - min + 1) + min)
        }
        addSceneHTML() {
            this.checkForm();
            ((array) => {
                $("#templates").html(array.map(i => `<div id="scene-${i.index}">
                    <h4 class="scene-text">
                        Scene ${i.index} - <button class="btn btn-xs btn-red" onclick="templateManager.removeScene('${i.index}')" type="button">
                            Remove
                        </button> - <button class="btn btn-xs btn-orange" onclick="templateManager.loadSceneSettings('${i.index}')" type="button">
                            Settings
                        </button>
                    </h4>
                    <div class="form-group">
                        <label for="" class="col-sm-3 control-label">Scene Name<span class="text-danger">*</span></label>
                        <div class="col-sm-6">
                            <input class="form-control" type="text" value="${
                                this.sceneConfig ? this.sceneConfig[i.index - 1] ? this.sceneConfig[i.index - 1][`step2title${i.index}`] || "" : "" : ""
                            }" name="step2title${
                                i.index
                            }" maxlength="40" placeholder="Just Browing YouTube" onchange="templateManager.saveConfig(this, 'step2title${
                                i.index
                            }', 'scene-${i.index}')">
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="" class="col-sm-3 control-label">Scene Description<span class="text-danger">*</span></label>
                        <div class="col-sm-6">
                            <textarea class="form-control" onchange="templateManager.saveConfig(this, 'step2desc${
                                i.index
                            }', 'scene-${i.index}')" name="step2desc${
                                i.index
                            }" placeholder="2 characters deside to browse youtube when something bad happens. Animate the story!">${
                                this.sceneConfig ? this.sceneConfig[i.index - 1] ? this.sceneConfig[i.index - 1][`step2desc${i.index}`] || "" : "" : ""
                            }</textarea>
                        </div>
