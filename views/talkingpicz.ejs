                                        setTimeout(() => {
                                            jQuery('#login_bar').slideUp();
                                            showNotice(response);
                                        }, 500);
                                    });
                                });
                            } else GoLite.userData = user;
                        });
                    });
                    jQuery('#movie_title, #movie_description').placeholder();
                });
                $(window).load(function() {$('#nav_links').fadeIn();});
            })(jQuery);
